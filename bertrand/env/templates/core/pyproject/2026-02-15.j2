[build-system]
requires = ["setuptools>=69", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "Bertrand project"
readme = "README.md"
requires-python = ">=3.12"
dependencies = []

[tool.bertrand]
shell = "{{ shell }}"

# Canonical build matrix for Bertrand images/containers.
# `tag = ""` denotes the default image/container for its parent environment
# or image, respectively.  Images/containers of this form can have arguments,
# but users are encouraged to define tags for any images/containers that
# require them, in order to avoid confusion.
[[tool.bertrand.images]]
tag = ""
args = []

[[tool.bertrand.images.containers]]
tag = ""
args = []

[[tool.bertrand.images]]
tag = "debug"
args = ["DEBUG=true"]

[[tool.bertrand.images.containers]]
tag = ""
args = []

# `env:debug:san` extends the `debug` image with common sanitizers that
# execute alongside your program and detect memory errors or undefined
# behavior.
[[tool.bertrand.images.containers]]
tag = "san"
args = [
    "-e SANITIZERS=asan,ubsan",
    "-e ASAN_OPTIONS=detect_leaks=1:abort_on_error=1",
    "-e UBSAN_OPTIONS=print_stacktrace=1:halt_on_error=1",
]

[tool.ty]

[tool.ruff]
line-length = 100
target-version = "py312"

[tool.ruff.lint]
select = ["E", "F", "I", "B", "UP"]

[tool.pytest.ini_options]
addopts = "-q"
testpaths = ["tests"]

# Bertrand projects centralize clang tool settings here.
# On `config.sync()`, these sections project to:
#   [tool.clang-format] -> .clang-format
#   [tool.clang-tidy]   -> .clang-tidy
#   [tool.clangd]       -> .clangd
[tool.clang-format]
BasedOnStyle = "LLVM"
IndentWidth = 4
ColumnLimit = 100

[tool.clang-tidy]
Checks = [
    "clang-analyzer-*",
    "bugprone-*",
    "performance-*",
    "readability-*",
]
WarningsAsErrors = []
HeaderFilterRegex = ".*"
CheckOptions = {}

# clangd should generally use compile commands from compile_commands.json.
# Use this section for diagnostics/completion/inlay/documentation tuning.
# CompileFlags can be set manually if needed, but is usually unnecessary.
[tool.clangd]
[tool.clangd.Diagnostics]
UnusedIncludes = "Strict"
