[build-system]
requires = ["setuptools>=69", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "Bertrand project"
readme = "README.md"
requires-python = ">=3.12"
dependencies = []

[tool.bertrand]
shell = "{{ shell }}"

[tool.ty]

[tool.ruff]
line-length = 100
target-version = "py312"

[tool.ruff.lint]
select = ["E", "F", "I", "B", "UP"]

[tool.pytest.ini_options]
addopts = "-q"
testpaths = ["tests"]

# Bertrand projects centralize clang tool settings here.
# On `config.sync()`, these sections project to:
#   [tool.clang-format] -> .clang-format
#   [tool.clang-tidy]   -> .clang-tidy
#   [tool.clangd]       -> .clangd
[tool.clang-format]
BasedOnStyle = "LLVM"
IndentWidth = 4
ColumnLimit = 100

[tool.clang-tidy]
Checks = [
    "clang-analyzer-*",
    "bugprone-*",
    "performance-*",
    "readability-*",
]
WarningsAsErrors = []
HeaderFilterRegex = ".*"
CheckOptions = {}

# clangd should generally use compile commands from compile_commands.json.
# Use this section for diagnostics/completion/inlay/documentation tuning.
# CompileFlags can be set manually if needed, but is usually unnecessary.
[tool.clangd]
[tool.clangd.Diagnostics]
UnusedIncludes = "Strict"
